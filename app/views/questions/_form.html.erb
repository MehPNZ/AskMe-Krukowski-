<%= turbo_frame_tag question do %>

  <%= form_with model: question do |f| %>
    <%= render 'shared/errors', object: question%>
    <div class="mb-3 row">
      <div class='col-sm-1 col-form-label text-end'>
        <%= f.label :title%>
      </div>

      <div class="col-sm-10">
        <%= f.text_field :title, placeholder: t('.title'), class: 'form-control'%>
      </div>
    </div>

    <div class="mb-3 row">
      <div class='col-sm-1 col-form-label text-end'>
        <%= f.label :body%>
      </div>

      <div class="col-sm-10">
        <%= f.text_area :body, placeholder: t('.body'), class: 'form-control'%>
      </div>
    </div>

    <div class="mb-3 row">
      <div class="col-sm-1 col-form-label text-end">
        <%= f.label :tags %>
      </div>

      <div class="col-sm-10">
      <%= f.collection_select :tag_ids, question.tags, :id, :title, {}, multiple: true,
          class: 'js-multiple-select', data: {'ajax-url': '/api/tags'} %>
      </div>
    </div>

    <%= f.submit t("global.submit"), class: 'btn btn-primary' %>
    <%= link_to t(".cancel"), questions_path, class: 'btn btn-danger' %>
    <% end %>
<% end %>