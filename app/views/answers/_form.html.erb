<%= turbo_frame_tag @answer do%>

  <%= form_with model: [@question, @answer] do |f| %>
    <%= render 'shared/errors', object: @answer %>

    <div class="mb-3 row">
      <div class='col-sm-1 col-form-label text-end'>
        <%= f.label :body%>
      </div>

      <div class="col-sm-10">
        <%= f.text_area :body, class: 'form-control'%>
      </div>
    </div>

    <%= f.submit t("global.submit"), class: 'btn btn-primary' %>
    <%= link_to t("questions.form.cancel"), question_path(@question), class: 'btn btn-danger'%> 
  <% end %>
<% end %>